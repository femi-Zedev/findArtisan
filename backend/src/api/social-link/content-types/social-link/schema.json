{
  "kind": "collectionType",
  "collectionName": "social_links",
  "info": {
    "singularName": "social-link",
    "pluralName": "social-links",
    "displayName": "Social Link",
    "description": "Social media links for artisans"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "platform": {
      "type": "enumeration",
      "enum": [
        "facebook",
        "instagram",
        "tiktok",
        "whatsapp",
        "website",
        "other"
      ],
      "default": "other",
      "required": true
    },
    "url": {
      "type": "string",
      "required": true,
      "regex": "^(https?:\\/\\/)?([\\w-]+\\.)+[\\w-]+(\\/[\\w-./?%&=]*)?$"
    },
    "artisan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::artisan.artisan",
      "inversedBy": "social_links"
    }
  }
}

